<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wtuscano.myapplication.AdminLoginActivity">

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="163dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etLoginUsername"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="63dp" />

    <EditText
        android:id="@+id/etSignupPassword"
        android:layout_width="163dp"
        android:layout_height="34dp"
        android:layout_alignEnd="@+id/btnSignup"
        android:layout_alignRight="@+id/btnSignup"
        android:layout_centerVertical="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="63dp" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="163dp"
        android:layout_height="34dp"
        android:layout_alignLeft="@+id/etSignupPassword"
        android:layout_alignStart="@+id/etSignupPassword"
        android:layout_below="@+id/etSignupPassword"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etLoginUsername"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/etLoginUsername"
        android:layout_marginTop="22dp"
        android:text="@string/login"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etLoginUsername"
        android:layout_width="163dp"
        android:layout_height="34dp"
        android:layout_above="@+id/etSignupPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="DanGilbert"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="63dp" />

    <EditText
        android:id="@+id/etSignupUsername"
        android:layout_width="163dp"
        android:layout_height="34dp"
        android:layout_alignLeft="@+id/etSignupPassword"
        android:layout_alignStart="@+id/etSignupPassword"
        android:layout_alignTop="@+id/textView2"
        android:ems="10"
        android:hint="DanGilbert"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etSignupUsername"
        android:layout_toEndOf="@+id/etSignupUsername"
        android:layout_toRightOf="@+id/etSignupUsername"
        android:text="@string/quickenLoans"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etLoginUsername"
        android:layout_toRightOf="@+id/etLoginPassword"
        android:text="@string/quickenLoans"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvLogin"
        android:layout_alignBottom="@+id/tvLogin"
        android:layout_alignEnd="@+id/etSignupUsername"
        android:layout_alignRight="@+id/etSignupUsername"
        android:text="@string/signup" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSignup"
        android:layout_alignBottom="@+id/btnSignup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="99dp"
        android:layout_marginStart="99dp"
        android:text="@string/login" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etConfirmPassword"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:layout_marginTop="10dp"
        android:text="@string/signup" />

</RelativeLayout>
